<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Gerenciar Avaliações</h1>
    <%= link_to 'Voltar ao Dashboard', manager_dashboard_path,
                class: 'bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="mb-8">
    <%= form_tag manager_evaluations_path, method: :get, class: "bg-white rounded-lg shadow p-6" do %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= label_tag :attendant_id, "Atendente", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :attendant_id,
                         options_from_collection_for_select(@attendants, :id, :name, params[:attendant_id]),
                         prompt: "Todos",
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= label_tag :date_range, "Período", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :date_range,
                         options_for_select([
                                              ['Hoje', 'today'],
                                              ['Esta Semana', 'week'],
                                              ['Este Mês', 'month'],
                                              ['Este Ano', 'year']
                                            ], params[:date_range]),
                         prompt: "Todo período",
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= label_tag :score, "Nota", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :score,
                         options_for_select((0..10).map { |n| [n.to_s, n] }, params[:score]),
                         prompt: "Todas",
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div class="flex items-end">
          <%= submit_tag "Filtrar",
                         class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Atendente</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nota</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <% @evaluations.each do |evaluation| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= evaluation.evaluation_date.strftime("%d/%m/%Y") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900"><%= evaluation.attendant.name %></div>
            <div class="text-sm text-gray-500"><%= evaluation.attendant.attendant_profile.registration_number %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-gray-900"><%= evaluation.client.name %></div>
            <div class="text-sm text-gray-500"><%= evaluation.client.email %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                <%= evaluation.score >= 7 ? 'bg-green-100 text-green-800' :
                                                 evaluation.score >= 5 ? 'bg-yellow-100 text-yellow-800' :
                                                   'bg-red-100 text-red-800' %>">
                <%= evaluation.score %>/10
              </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <%= link_to 'Ver Detalhes', manager_evaluation_path(evaluation),
                        class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>