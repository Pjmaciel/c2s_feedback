<%= form_with(model: evaluation, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :attendant_id, "Atendente" %>
    <%= form.collection_select :attendant_id, @attendants, :id, :name, prompt: "Selecione um atendente", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :score, "Nota (0-10)" %>
    <%= form.number_field :score, min: 0, max: 10, step: 1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comment, "Comentário" %>
    <%= form.text_area :comment, rows: 5, placeholder: "Descreva sua experiência...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :evaluation_date, "Data da Avaliação" %>
    <%= form.date_field :evaluation_date, value: evaluation.evaluation_date || Date.today, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
