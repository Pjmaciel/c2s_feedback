<%# app/views/clients/registrations/new.html.erb %>
<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-xs">
    <h2 class="text-center text-2xl font-semibold mb-6">Cadastro de Cliente</h2>

    <%= form_for(resource, as: resource_name, url: client_registration_path, html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.fields_for :client_profile do |profile_fields| %>
        <div class="mb-4">
          <%= profile_fields.label :cpf, "CPF", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= profile_fields.text_field :cpf,
                                        class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                                        data: { mask: '000.000.000-00' } %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autocomplete: "email",
                          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password",
                             class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <% if @minimum_password_length %>
          <p class="text-gray-600 text-xs italic mt-1">(<%= @minimum_password_length %> caracteres no mÃ­nimo)</p>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Cadastrar", class: "bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to "Voltar", root_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
      </div>
    <% end %>
  </div>
</div>