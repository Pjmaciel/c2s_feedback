<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Nova Solicitação de Avaliação</h1>

  <%= form_with(model: [:attendant, @evaluation_request], local: true, class: "max-w-lg") do |f| %>
    <% if @evaluation_request.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2">Erros impediram o salvamento:</h2>
        <ul class="list-disc list-inside">
          <% @evaluation_request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :client_id, "Cliente", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.collection_select :client_id, @clients, :id, :name,
                              { prompt: "Selecione um cliente" },
                              { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Enviar Solicitação", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Cancelar", attendant_dashboard_path, class: "text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>
</div>