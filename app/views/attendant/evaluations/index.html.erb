<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Minhas Avalia√ß√µes</h1>
    <%= link_to 'Voltar ao Dashboard', attendant_dashboard_path,
                class: 'bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <!-- Filtro por Sentimento -->
  <div class="mb-6">
    <%= form_tag filter_attendant_evaluations_path, method: :get, class: "bg-white rounded-lg shadow p-6" do %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= label_tag :sentiment, "Sentimento", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :sentiment,
                         options_for_select([
                                              ['Todos', ''],
                                              ['Positivas üòä', 'positive'],
                                              ['Neutras üòê', 'neutral'],
                                              ['Negativas üò°', 'negative']
                                            ], params[:sentiment]),
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div class="flex items-end">
          <%= submit_tag "Filtrar",
                         class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Tabela de Avalia√ß√µes -->
  <% if @evaluations.any? %>
    <%= render "attendant/evaluations/table", evaluations: @evaluations %>
  <% else %>
    <p class="text-gray-600">Nenhuma avalia√ß√£o encontrada para os filtros aplicados.</p>
  <% end %>
</div>
